#!/bin/bash
#
# Assign tag $2 to all products having tag $1
#

[[ $1 == "-n" ]] && { DO_NOTHING=1; shift; }

if [[ $# != 2 ]]; then
  echo "usage: $0 [-n] <tagFrom> <tagTo>" >&2
  exit 1
fi

set -e

FROM=$1
TO=$2

for line in $(eups list --raw -t "$FROM"); do
  IFS="|" read -r -a field <<< "$line"

  if [[ $DO_NOTHING == 1 ]]; then
    echo eups declare -t "$TO" "${field[0]}" "${field[1]}"
  else
    eups declare -t "$TO" "${field[0]}" "${field[1]}"
  fi
done

# vim: tabstop=2 shiftwidth=2 expandtab
